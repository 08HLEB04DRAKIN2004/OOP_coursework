@model ClientViewModel

<h2>Client Details</h2>

@if (Model != null)
{
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.ClientId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Contact Information</dt>
        <dd class="col-sm-10">@Model.ContactInformation</dd>

        <dt class="col-sm-2">Contract</dt>
        <dd class="col-sm-10">@Model.Contract</dd>
    </dl>
}
else
{
    <p>Client not found.</p>
}
