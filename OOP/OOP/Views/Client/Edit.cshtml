@model ClientViewModel

<h2>Edit Client</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="ClientId">Client ID:</label>
        <input asp-for="ClientId" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ContactInformation">Contact Information:</label>
        <input asp-for="ContactInformation" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Contract">Contract:</label>
        <input asp-for="Contract" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
