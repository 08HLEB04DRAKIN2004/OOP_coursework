@model OOP.Domain.ViewModel.Orders.OrdersViewModel

<h2>Order Details</h2>

@if (Model != null)
{
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Order_id</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.Date</dd>

        <dt class="col-sm-2">Order Amount</dt>
        <dd class="col-sm-10">@Model.Amount</dd>

        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@Model.Client_id</dd>
    </dl>
}
else
{
    <p>Order not found.</p>
}
