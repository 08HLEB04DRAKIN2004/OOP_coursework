@model List<OOP.Domain.ViewModel.Orders.OrdersViewModel>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Description</th>
                <th>Order Date</th>
                <th>Order Amount</th>
                <th>User ID</th>
        
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Order_id</td>
                    <td>@order.Description</td>
                    <td>@order.Date</td>
                    <td>@order.Amount</td>
                    <td>@order.Client_id</td>
           
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No orders available.</p>
}
