@model OOP.Domain.ViewModel.EmployeesInProject.EmployeeInProjectViewModel

<h2>Create Employee in Project</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="project_id">Project ID:</label>
        <input asp-for="project_id" class="form-control" />
        <span asp-validation-for="project_id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="employee_id">Employee ID:</label>
        <input asp-for="employee_id" class="form-control" />
        <span asp-validation-for="employee_id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="role_id">Role ID:</label>
        <input asp-for="role_id" class="form-control" />
        <span asp-validation-for="role_id" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>



