@model List<OOP.Domain.ViewModel.EmployeesInProject.EmployeeInProjectViewModel>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Assignment ID</th>
                <th>Project ID</th>
                <th>Employee ID</th>
                <th>Role ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employeeInProject in Model)
            {
                <tr>
                    <td>@employeeInProject.assignment_id</td>
                    <td>@employeeInProject.project_id</td>
                    <td>@employeeInProject.employee_id</td>
                    <td>@employeeInProject.role_id</td>
  
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No employee assignments available.</p>
}
